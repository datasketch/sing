{
	"inputs": {
		"cual_tabla": { // input cuando el usuario selecciona una base de múltiples bases
			"input_type": "selectizeInput",
			"selector": { // los selectors sirven para navegar por los diccionarios de las bases
						"hdbase": "mi_base0"
			},
			"input_params": {
				"label": {
					"what": "label"
				},
				"choices": {
					"what": "hdtables.name"  // Lista nombrada con los slugs y los nombres de las tablas que están en mi_base0
				}
			}
		},
		"num1": {
			"input_type": "numericInput",
			"input_params": {
				"label": "Variable Num 1",
				"value": 0,
				"min": 0,
				"max": 35
			}

		},
		"num2": {
			"input_type": "numericInput",
			"input_params": {
				"label": "Variable Num 1",
				"value": 0,
				"min": 0,
				"max": 35
			},
			"conditions": {
				"any_of": [
					{
						"input_id": "num1",
						"condition": "equals",
						"value": 3

					}

				]
			}
		},
		"deptos": {
			"input_type": "selectizeInput",
			"selector": {
				"hdbase": "base0",
				"hdtable": "id_tabla_1",
				"hdfield": "deptos"
			},
			"input_params": {
				"label": {
					"what": "label"
				},
				"choices": {
					// "selector": { // Se puede quitar de aquí porque es el mismo para label y choices
					// 	"hdbase": "base0",
					// 	"hdtable": "id_tabla_1",
					// 	"hdfield": "deptos"
					// },
					"what": "deptos.format.categories" // lista nombrada con las categorías de los deptos

				}
			}
		},
		"municipios": {
			"input_type": "selectizeInput",
			"selector": {
						"parent": "mi_base0",
						"hdtable": "id_tabla_1",
						"hdfield": "id_munis"
			},
			"input_params": {
				"label": {
					// "selector": {
					// },
					"what": "label"
				},
				"choices": {
					// "conditions": {
					// 	"depends_on_selection": "deptos" //depende del valor de deptos
					// },
					"what": {
						"filter": {
							"what": "deptos",
							"by": {
								"input": "deptos"
							},
							"condition:": "any_of",
							"return": "id_muni.format.categories"
						}
					}
				}
			}
		}
	}
	// ,
	// "selector":{
	// 	"name": "mi_base0",
	// 	"hdtbase": "id_base1"
	// }
}
